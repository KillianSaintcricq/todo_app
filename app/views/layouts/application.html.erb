<!DOCTYPE html>
<html>
<head>
  <title>Todo</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid col-md-offset-2">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Todo app</a>
    </div>
    <div>
      <ul class="nav navbar-nav">
        <li class="<%= 'active' if current_page?(root_path) %>">
          <%= link_to 'Home', root_path %>
        </li>
        <li class="<%= 'active' if current_page?(tasks_path) %>">
          <%= link_to 'List', tasks_path %>
        </li>
        <li class="<%= 'active' if current_page?(new_task_path) %>">
          <%= link_to 'New task', new_task_path %>
        </li>
        <li style="<%= 'display: none' unless current_page?(:controller => 'tasks', :action => 'edit', :id => params[:id] || 0) %>"
            class="<%= 'active' if current_page?(:controller => 'tasks', :action => 'edit', :id => params[:id] || 0) %>">
          <a href="#">Edit</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <%= yield %>
  </div>
</div>

</body>
</html>
